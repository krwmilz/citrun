SubDir TOP bin ;

rule Generate
{
	Depends $(1) : $(2) ;
	Depends all : $(1) ;
}

actions Generate
{
	sed -e s,%PREFIX%,$(PREFIX), -e s,%GIT_HASH%,`git rev-parse --short HEAD`, < $(2) > $(1) ;
	chmod 755 $(1) ;
}

Generate $(TOP)/bin/citrun-wrap : $(TOP)/bin/citrun-wrap.in ;

InstallShell $(PREFIX)/bin : citrun-wrap ;
InstallMan $(PREFIX)/man : citrun-wrap.1 ;
