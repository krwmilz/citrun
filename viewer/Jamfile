SubDir TOP viewer ;

SUBDIRC++FLAGS = `pkg-config $(PKG_CONFIG_LIBS) --cflags` ;
SUBDIRC++FLAGS += -I/usr/local/include ;
SUBDIRC++FLAGS += -std=c++11 ;

LINKLIBS on scv_viewer += `pkg-config $(PKG_CONFIG_LIBS) --libs` ;

Main scv_viewer :
	main.cc
	runtime_process.cc
	af_unix.cc
	view.cc
	demo-atlas.cc
	demo-buffer.cc
	demo-font.cc
	demo-glstate.cc
	demo-shader.cc
	matrix4x4.c
	trackball.c ;

LinkLibraries scv_viewer : libglyphy ;

InstallBin $(PREFIX)/bin : scv_viewer ;
InstallMan $(PREFIX)/man : scv_viewer.1 ;

SubInclude TOP viewer glyphy ;
